<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".CRUDActivity">


    <EditText
        android:id="@+id/nameEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NAME"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/majorEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MAJOR"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/minorEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MINOR"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/gpaEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="GPA"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/dobEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DOB"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/cityEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CITY"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/stateEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="STATE"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/ssnEditTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SSN"
        android:textAlignment="center"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/addButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="add"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/editButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="edit"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/deleteButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="delete"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/viewButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="view"
            android:onClick="onClick"/>

    </LinearLayout>
</LinearLayout>